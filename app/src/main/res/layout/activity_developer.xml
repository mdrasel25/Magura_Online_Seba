<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Developer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/Developer"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/app_themecolor"
            >

            <ImageView
                android:id="@+id/back_developer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                />
            <TextView
                android:fontFamily="@font/regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ডেভেলপার সস্পর্কে"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginRight="50dp"
                />

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F9FCFD"

                >

                <androidx.cardview.widget.CardView
                    android:backgroundTint="#F6FDFD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="30dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="5dp"
                    android:outlineSpotShadowColor="#009688"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:background="#1ABC9C"
                            >

                        </LinearLayout>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/card"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="60dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:backgroundTint="@color/white"
                            >

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="60dp"
                                android:layout_margin="3dp"
                                android:backgroundTint="@color/black"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/md_rasel"
                                    android:scaleType="fitXY"
                                    />

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@+id/card"
                            android:layout_marginLeft="10dp"
                            android:paddingTop="10dp"
                            android:gravity="center"
                            android:layout_marginRight="5dp"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="মোঃ রাসেল হোচাইন"
                                    android:textSize="21dp"
                                    android:textColor="#434141"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"
                                    android:text="App Developer"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    android:textColor="#737171"
                                    android:layout_marginTop="2dp"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/whatsapp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="01993934316"
                                    android:textSize="18dp"
                                    android:textColor="#424040"
                                    android:textIsSelectable="true"
                                    android:layout_marginLeft="5dp"
                                    />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/gmail"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="mdraselhossain2503@gmail.com"
                                    android:textSize="18dp"
                                    android:textColor="#3E3D3D"
                                    android:textIsSelectable="true"
                                    android:layout_marginLeft="5dp"
                                    />


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/mylive"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Boalmari,Faridpur"
                                    android:textSize="18dp"
                                    android:textColor="#353434"
                                    android:textIsSelectable="true"
                                    android:layout_marginLeft="5dp"
                                    />

                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/mycall"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="15dp"
                                android:backgroundTint="#1ABC9C"
                                android:layout_marginHorizontal="80dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                app:cardElevation="5dp"
                                android:layout_marginBottom="20dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="3dp"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Call me"
                                        android:textSize="20dp"
                                        android:textStyle="normal"
                                        android:textColor="#F6F5F5"
                                        />

                                    <com.airbnb.lottie.LottieAnimationView
                                        android:layout_marginLeft="10dp"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        app:lottie_rawRes="@raw/call"
                                        app:lottie_autoPlay="true"
                                        app:lottie_loop="true"/>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_alignParentBottom="true"
                            android:background="#1ABC9C" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#AFADAD"
                    />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>